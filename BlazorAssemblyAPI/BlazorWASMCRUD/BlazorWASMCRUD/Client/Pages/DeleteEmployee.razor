@page "/deleteemployee/{id}"
@using BlazorWASMCRUD.Shared

@inject HttpClient Http
@inject NavigationManager NavigationManager

<h2>Delete</h2>
<p>Are you sure you want to delete this Employee with Id : <b> @id</b></p>
<br />
<div class="col-md-4">
    <table class="table">
        <tr>
            <td>Name</td>
            <td>@emp.EmpName</td>
        </tr>
        <tr>
            <td>Designation</td>
            <td>@emp.Designation</td>
        </tr>
        <tr>
            <td>Department</td>
            <td>@emp.Department</td>
        </tr>
    </table>
    <div class="form-group">
        <input type="button" value="Delete" @onclick="@Delete" class="btn btn-primary" />
        <input type="button" value="Cancel" @onclick="@Cancel" class="btn" />
    </div>
</div>


@code {
    [Parameter]
    public string id { get; set; }

    EmployeeInfo emp = new EmployeeInfo();

    protected override async Task OnInitializedAsync()
    {
        emp = await Http.GetJsonAsync<EmployeeInfo>("http://localhost:53908/api/EmployeeInfoes/" + id);
    }

    protected async Task Delete()
    {
        await Http.DeleteAsync("http://localhost:53908/api/EmployeeInfoes/" + id);
        NavigationManager.NavigateTo("employeeList");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("employeeList");
    }
}
