@page "/editemployee/{id}"

@using BlazorWASMCRUD.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h2>Edit Employee</h2>
<hr />
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="EmpName" class="control-label">Name</label>
                <input for="EmpName" class="form-control" @bind="@emp.EmpName" />
            </div>
            <div class="form-group">
                <label for="Designation" class="control-label">Designation</label>
                <input for="Designation" class="form-control" @bind="@emp.Designation" />
            </div>
            <div class="form-group">
                <label for="Department" class="control-label">Department</label>
                <input for="Department" class="form-control" @bind="@emp.Department" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <input type="button" class="btn btn-primary" @onclick="@UpdateEmployee" value="Update" />
            <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string id { get; set; }

    EmployeeInfo emp = new EmployeeInfo();

    protected override async Task OnInitializedAsync()
    {
        emp = await Http.GetJsonAsync<EmployeeInfo>("http://localhost:53908/api/EmployeeInfoes/"+id);
    }

    protected async Task UpdateEmployee()
    {
        await Http.PutJsonAsync("http://localhost:53908/api/EmployeeInfoes/"+id, emp);
        NavigationManager.NavigateTo("employeeList");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("employeeList");
    }
}